extends layout

block content
  h1 #{title}: #{book.name}

  if book_instance.length

    p #[strong Delete the following book instances before attempting to delete this boook.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances

      dl
      each bookinstance in book_instance
        dt
          a(href=book_instance.url) #{book_instance.status}

  else
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete